pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Madhunath/project1.git'
            }
        }
        
        stage('Run Ansible Playbook') {
            steps {
                withCredentials([file(credentialsId: 'my_ssh_key', keyFileVariable: 'SSH_KEY_FILE')]) {
                    sh "ansible-playbook -i hosts --private-key=${SSH_KEY_FILE} config.yml"
                }
            }
        }
    }
}
